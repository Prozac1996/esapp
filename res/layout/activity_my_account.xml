<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:padding="20dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_centerVertical="true"
                android:onClick="back" android:text="@string/arrowBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:text="@string/myAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

    <TextView
            android:text="99.9元"
            android:textStyle="bold"
            android:textSize="40sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView android:id="@+id/btn_6"
                android:text="6元"
                android:gravity="center"
                style="@style/MyOrangeText"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        <TextView android:id="@+id/btn_68"
                android:text="68元"
                android:gravity="center"
                android:layout_margin="5dp"
                style="@style/MyOrangeText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        <TextView android:id="@+id/btn_208"
                android:text="208元"
                android:gravity="center"
                android:layout_margin="5dp"
                style="@style/MyOrangeText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView android:id="@+id/btn_388"
                android:text="388元"
                android:gravity="center"
                android:layout_margin="5dp"
                style="@style/MyOrangeText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        <TextView android:id="@+id/btn_698"
                android:text="698元"
                android:gravity="center"
                android:layout_margin="5dp"
                style="@style/MyOrangeText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        <TextView android:id="@+id/btn_998"
                android:text="998元"
                android:gravity="center"
                android:layout_margin="5dp"
                style="@style/MyOrangeText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

        <TextView
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="@string/payMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView android:id="@+id/tv_pay"
                  android:text="0"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="元"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
            android:text="确定支付"
            android:background="@color/orange"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


</LinearLayout>
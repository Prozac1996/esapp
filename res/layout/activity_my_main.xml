<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:padding="20dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:background="#000000"
                android:layout_marginTop="80dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <com.zte.esapp.widget.CircleImageView android:id="@+id/btn_modify_head"

                                              android:src="@drawable/head"
                                              android:layout_gravity="center"
                                              android:layout_marginTop="45dp"
                                              android:layout_marginBottom="20dp"
                                              android:layout_width="60dp"
                                              android:layout_height="60dp"
                                              app:civ_border_width="1dp"
                                              app:civ_border_color="@color/white"/>


    </FrameLayout>

    <TextView
            android:text="用户昵称"
            android:layout_gravity="center"
            android:textSize="26sp"
            android:padding="10dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <!--学习信息开始-->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

            <TextView
                    android:text="27小时22分钟"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="@string/studyTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

            <TextView
                    android:text="30本"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="@string/studyBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

            <TextView
                    android:text="25天"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="@string/studyDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
    <!--学习信息完毕-->

    <!--选择菜单开始-->
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <LinearLayout android:id="@+id/btn_message_center"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:background="@drawable/background_press_selector"
                      android:gravity="center_vertical"
                      android:layout_height="0dp"
                      android:layout_weight="1">

            <ImageView
                    android:src="@drawable/point_red"
                    android:padding="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            <TextView
                    android:text="@string/messageCenter"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout android:id="@+id/btn_downloaded"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:background="@drawable/background_press_selector"
                      android:gravity="center_vertical"
                      android:layout_height="0dp"
                      android:layout_weight="1">

            <ImageView
                    android:src="@drawable/point_orange"
                    android:padding="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            <TextView
                    android:text="@string/downloaded"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout android:id="@+id/btn_like"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:gravity="center_vertical"
                      android:background="@drawable/background_press_selector"
                      android:layout_height="0dp"
                      android:layout_weight="1">

            <ImageView
                    android:src="@drawable/point_yellow"
                    android:padding="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            <TextView
                    android:text="@string/like"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout android:id="@+id/btn_account"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:background="@drawable/background_press_selector"
                      android:gravity="center_vertical"
                      android:layout_height="0dp"
                      android:layout_weight="1">

            <ImageView
                    android:src="@drawable/point_green"
                    android:padding="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            <TextView
                    android:text="@string/myAccount"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

            <TextView
                    android:text="23.2"
                    android:layout_width="0dp"
                    android:paddingRight="30dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout android:id="@+id/btn_setting"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:background="@drawable/background_press_selector"
                      android:gravity="center_vertical"
                      android:layout_height="0dp"
                      android:layout_weight="1">

            <ImageView
                    android:src="@drawable/point_cyan"
                    android:padding="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            <TextView
                    android:text="@string/setting"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout android:id="@+id/btn_share"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:gravity="center_vertical"
                      android:background="@drawable/background_press_selector"
                      android:layout_height="0dp"
                      android:layout_weight="1">

            <ImageView
                    android:src="@drawable/point_blue"
                    android:padding="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            <TextView
                    android:text="@string/share"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

        </LinearLayout>


    </LinearLayout>
    <!--选择菜单完毕-->
</LinearLayout>